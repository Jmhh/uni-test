.content {
  text-align: center;
  height: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background-color: #FFFFFF;
}
.search_body {
  padding: 30rpx 0rpx;
  border-bottom: 1px solid #F1F1F1;
  position: fixed;
  z-index: 999;
  width: 100%;
  background-color: #fff;
}
.search_input_box {
  height: 60rpx;
  border-radius: 6px;
  background-color: #F8F8F8;
  margin: 0 auto;
  width: 95%;
}
.search_input {
  height: 60rpx;
}
.sear_relt_body {
  margin-top: 136rpx;
  height: auto;
}
.relt_list {
  height: auto;
}
.list_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #F1F1F1;
  padding: 15rpx 25rpx;
}
.dec_item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.card_img {
  text-align: left;
  padding: 8rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 120rpx;
          flex: 0 0 120rpx;
}
.card_img image {
    width: 100rpx;
    height: 100rpx;
}
.card_img ._img {
  width: 95rpx;
  height: 95rpx;
  border-radius: 15rpx;
}
.card_dec {
  text-align: left;
  color: #999999;
  font-size: 24rpx;
}
.card_dec .card_name {
    color: #333333;
    font-weight: bold;
    font-size: 30rpx;
}
.card_oper {
  text-align: center;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 100rpx;
          flex: 0 0 100rpx;
}
.card_oper .oper_btn {
    display: inline-block;
    font-weight: bold;
    color: #999999;
    padding-top: 28rpx;
}
.hide {
  display: none;
}

